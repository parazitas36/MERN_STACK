{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6"
    ],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "checkJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}